@model NIC.Models.ViewModel.GenderViewModel
@{
}
<h1>Edit Gender</h1>
<a class="btn btn-primary" asp-area="" asp-controller="Gender" asp-action="EditGender">Go Back</a>
<form method="post" action="View" class="mt-3">
    <div class="mb-3">
        <label for="" class="form-label">Gender Code</label>
        <input readonly class="form-control" asp-for="Gender" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Gender Description</label>
        <input type="text" class="form-control" asp-for="GenderDesc" />
    </div>
    <button type="submit" class="btn btn-primary">Update Gender Description</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Gender">Delete Gender</button>

</form>
