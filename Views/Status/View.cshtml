@model NIC.Models.ViewModel.StatusViewModel
@{
}
<h1>Edit Status</h1>
<a class="btn btn-primary" asp-area="" asp-controller="Status" asp-action="EditStatus"><i class="fa-solid fa-arrow-left-to-line"></i>Go Back</a>
<form method="post" action="View" class="mt-3">
    <div class="mb-3">
        <label for="" class="form-label">Application Status</label>
        <input readonly class="form-control" asp-for="ApplicationStatus" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Application Status Description</label>
        <input type="text" class="form-control" asp-for="ApplicationStatusDesc" />
    </div>
    <button type="submit" class="btn btn-primary">Update Status</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Status">Delete Status</button>

</form>
