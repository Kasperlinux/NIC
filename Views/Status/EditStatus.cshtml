@model List<NIC.Models.MApplicationStatus>;
@{
}
<h1>Application Status</h1>

<a class="btn btn-primary" asp-area="" asp-controller="Status" asp-action="AddStatus"><i class="fa-solid fa-plus fa-xl"></i> Add Status</a>
<table class="table">
    <thead>
        <tr>
            <th>Application Status</th>
            <th>Application Status Description</th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ApplicationStatus</td>
                <td>@item.ApplicationStatusDesc</td>
                <td><a class="btn btn-primary" href="View/@item.ApplicationStatus"><i class="fa-solid fa-pen-to-square"></i> Edit</a></td>
            </tr>
        }
    </tbody>
</table>
