@model NIC.Models.ViewModel.ScreeningCenterViewModel
@{
}
<h1>Edit Screening Center</h1>
<a class="btn btn-primary" asp-area="" asp-controller="ScreeningCenter" asp-action="EditCenter"><i class="fa-solid fa-arrow-left-to-line"></i>Go Back</a>
<form method="post" action="View" class="mt-3">
    <div class="mb-3">
        <label for="" class="form-label">Screening Centre</label>
        <input readonly class="form-control" asp-for="ScreeningCentre" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Screening Centre Name</label>
        <input type="text" class="form-control" asp-for="ScreeningCentreName" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Application Type</label>
        <input class="form-control" asp-for="ApplicationType" />
    </div>
    <button type="submit" class="btn btn-primary">Update State</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Master">Delete Screening Center</button>

</form>
