@model NIC.Models.ViewModel.ReligionViewModel
@{
}
<h1>Edit Religion</h1>
<a class="btn btn-primary" asp-area="" asp-controller="Religion" asp-action="EditReligion">Go Back</a>
<form method="post" action="View" class="mt-3">
    <div class="mb-3">
        <label for="" class="form-label">Religion Code</label>
        <input readonly class="form-control" asp-for="Religion" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Religion Description</label>
        <input type="text" class="form-control" asp-for="ReligionDesc" />
    </div>
    <button type="submit" class="btn btn-primary">Update Religion Description</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Religion">Delete Religion</button>

</form>
