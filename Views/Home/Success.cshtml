@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
  <title>Account Creation Success</title>
  <style>
    /* CSS for animation */
    @@keyframes fadein {
      from { opacity: 0; }
      to   { opacity: 1; }
    }

    body {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
    }

    .container {
      text-align: center;
      animation: fadein 1s;
    }

    h1 {
      color: #333;
    }

    .success-message {
      background-color: #4caf50;
      color: #fff;
      padding: 20px;
      border-radius: 5px;
      margin-bottom: 20px;
    }

    .logout-button {
      background-color: #f44336;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .logout-button:hover {
      background-color: #d32f2f;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Account Creation Success</h1>
    <div class="success-message">
      <p>New account has been successfully created.</p>
      <p>Please Logout and login again!</p>
    </div>
        <form method="post" asp-action="LogOut" asp-controller="Account">
            <button type="submit" class="btn logout-button" asp-action="LogOut" asp-controller="Account" onclick="logout()" style="width:auto">
                Log Out
            </button>
        </form>
        @*<a class="btn logout-button" asp-action="LogOut" asp-controller="Account" onclick="logout()">Log Out</a>*@
       

    <script>
      // JavaScript function for logging out
      function logout() {
        // Add your logout logic here
        alert('You have been logged out.'); // Example: showing an alert
      }
    </script>
  </div>
</body>
</html>
