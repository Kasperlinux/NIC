@model List<NIC.Models.MCategory>;
@{
}
<h1>Category</h1>

<a class="btn btn-primary" asp-area="" asp-controller="Category" asp-action="AddCategory"><i class="fa-solid fa-plus fa-xl"></i> Add Category</a>

<table class="table">
    <thead>
        <tr>
            <th>Category</th>
            <th>Category Description</th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Category</td>
                <td>@item.CategoryDesc</td>
                <td><a class="btn btn-primary" href="View/@item.Category">View</a></td>
            </tr>
        }
    </tbody>
</table>
