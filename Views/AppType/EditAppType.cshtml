@model List<NIC.Models.MApplicationType>;
@{
}
<h1>Application Type</h1>
<a class="btn btn-primary" asp-area="" asp-controller="AppType" asp-action="AddAppType"><i class="fa-solid fa-plus fa-xl"></i> Add Application Type</a>

<table class="table">
    <thead>
        <tr>
            <th>Application Type</th>
            <th>Application Description</th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ApplicationType</td>
                <td>@item.ApplicationDesc</td>
                <td><a class="btn btn-primary" href="View/@item.ApplicationType"><i class="fa-solid fa-pen-to-square"></i> Edit</a></td>
            </tr>
        }
    </tbody>
</table>
