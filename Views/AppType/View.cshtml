@model NIC.Models.ViewModel.AppTypeViewModel
@{
}
<h1>Edit Application Type</h1>
<a class="btn btn-primary" asp-area="" asp-controller="AppType" asp-action="EditAppType"><i class="fa-solid fa-arrow-left-to-line"></i>Go Back</a>
<form method="post" action="View" class="mt-3">
    <div class="mb-3">
        <label for="" class="form-label">Application Type</label>
        <input readonly class="form-control" asp-for="ApplicationType" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Application Description</label>
        <input type="text" class="form-control" asp-for="ApplicationDesc" />
    </div>
    <button type="submit" class="btn btn-primary">Update Application Type</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="AppType">Delete App Type</button>

</form> 
