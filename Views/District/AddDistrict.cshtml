@model NIC.Models.ViewModel.DistrictViewModel;

<form method="post" action="AddDistrict" class="mt-3">
    <div class="mb-3">
        <label for="" class="form-label">State Code</label>
        <input type="number" class="form-control" asp-for="StateCode" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">District Code</label>
        <input type="number" class="form-control" asp-for="DistrictCode" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">District Name</label>
        <input type="text" class="form-control" asp-for="DistrictName" />
    </div>
    <button type="submit" class="btn btn-primary">Add District</button>
    <a asp-controller="District" asp-action="EditDistrict" class="btn btn-primary">Go Back</a>
</form>