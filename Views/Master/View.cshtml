@model NIC.Models.ViewModel.UpdateStateViewModel
@{
}
<h1>Edit State</h1>
<form method="post" action="View" class="mt-3">
    <div class="mb-3">
        <label for="" class="form-label">State Code</label>
        <input readonly class="form-control" asp-for="StateCode" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">State Name</label>
        <input type="text" class="form-control" asp-for="StateName" />
    </div>
    <button type="submit" class="btn btn-primary">Update State</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Master" >Delete State</button>
    <a class="btn btn-primary" asp-area="" asp-controller="Master" asp-action="EditState">Go Back</a>
   
    
</form>
