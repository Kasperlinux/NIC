@model NIC.Models.ViewModel.AddStateViewModel

<form method="post" action="AddState" class="mt-3">
    <div class="mb-3">
        <label for="" class="form-label">State Code</label>
        <input type="number" class="form-control" asp-for="StateCode"/>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">State Name</label>
        <input type="text" class="form-control" asp-for="StateName" />
    </div>
    <button type="submit" class="btn btn-primary">Add State</button>
    <a class="btn btn-primary" asp-area="" asp-controller="Master" asp-action="EditState">Go Back</a>
</form>