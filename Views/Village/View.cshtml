@model NIC.Models.ViewModel.VillageViewModel
@{
}
<h1>Edit Village</h1>
<form method="post" action="View" class="mt-3">
    <div class="mb-3">
        <label for="" class="form-label">State Code</label>
        <input readonly class="form-control" asp-for="StateCode" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">District Code</label>
        <input readonly class="form-control" asp-for="DistrictCode" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Block Code</label>
        <input readonly class="form-control" asp-for="BlockCode" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Village Code</label>
        <input readonly class="form-control" asp-for="VillageCode" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Village Name</label>
        <input type="text" class="form-control" asp-for="VillageName" />
    </div>
    <button type="submit" class="btn btn-primary">Update District</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Village">Delete Village</button>
    <a class="btn btn-primary" asp-area="" asp-controller="District" asp-action="EditDistrict"><i class="fa-solid fa-arrow-left-to-line"></i>Go Back</a>
</form>
