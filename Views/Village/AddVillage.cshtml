@model NIC.Models.ViewModel.VillageViewModel;

<form method="post" action="AddVillage" class="mt-3">
    <div class="mb-3">
        <label for="" class="form-label">State Code</label>
        <input type="number" class="form-control" asp-for="StateCode" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">District Code</label>
        <input type="number" class="form-control" asp-for="DistrictCode" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Village Code</label>
        <input type="number" class="form-control" asp-for="VillageCode" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Village Name</label>
        <input type="text" class="form-control" asp-for="VillageName" />
    </div>
    <button type="submit" class="btn btn-primary">Add Village</button>
    <a class="btn btn-primary" asp-controller="Village" asp-action="EditVillage">Go Back</a>
</form>