@model NIC.Models.ViewModel.BlockViewModel;

<form method="post" action="AddBlock" class="mt-3">
    <div class="mb-3">
        <label for="" class="form-label">State Code</label>
        <input type="number" class="form-control" asp-for="StateCode" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">District Code</label>
        <input type="number" class="form-control" asp-for="DistrictCode" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Block Code</label>
        <input type="number" class="form-control" asp-for="BlockCode" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Block Name</label>
        <input type="text" class="form-control" asp-for="BlockName" />
    </div>
    <button type="submit" class="btn btn-primary">Add Block</button>
    <a asp-controller="BLock" asp-action="EditBlock" class="btn btn-primary">Go Back</a>
</form>