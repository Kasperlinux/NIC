@model NIC.Models.ViewModel.BlockViewModel
@{
}
<h1>Edit Block</h1>
<form method="post" action="View" class="mt-3">
    <div class="mb-3">
        <label for="" class="form-label">State Code</label>
        <input readonly class="form-control" asp-for="StateCode" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">District Code</label>
        <input readonly class="form-control" asp-for="DistrictCode" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Block Code</label>
        <input readonly class="form-control" asp-for="BlockCode" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Block Name</label>
        <input type="text" class="form-control" asp-for="BlockName" />
    </div>
    <button type="submit" class="btn btn-primary">Update Block</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Block">Delete Block</button>
    <a class="btn btn-primary" asp-area="" asp-controller="Block" asp-action="EditBlock"><i class="fa-solid fa-arrow-left-to-line"></i>Go Back</a>
</form>
