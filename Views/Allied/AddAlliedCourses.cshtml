@model NIC.Models.ViewModel.AlliedCoursesViewModel

<form method="post" action="AddState" class="mt-3">
    <div class="mb-3">
        <label for="" class="form-label">Course Code</label>
        <input type="number" class="form-control" asp-for="AcCourseCode" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Course Name</label>
        <input type="text" class="form-control" asp-for="AcCourseName" />
    </div>
    <button type="submit" class="btn btn-primary">Add Allied Course</button>
    <a asp-controller="Allied" asp-action="EditAllied" class="btn btn-primary">Go Back</a>
</form>