@model NIC.Models.ViewModel.AlliedCoursesViewModel
@{
}
<h1>Edit Allied Courses</h1>
<a class="btn btn-primary" asp-area="" asp-controller="Allied" asp-action="EditAllied"><i class="fa-solid fa-arrow-left-to-line"></i>Go Back</a>
<form method="post" action="View" class="mt-3">
    <div class="mb-3">
        <label for="" class="form-label">AcCourse Code</label>
        <input readonly class="form-control" asp-for="AcCourseCode" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Course Name</label>
        <input type="text" class="form-control" asp-for="AcCourseName" />
    </div>
    <button type="submit" class="btn btn-primary">Update Allied Courses</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Allied">Delete Allied Courses</button>

</form>
